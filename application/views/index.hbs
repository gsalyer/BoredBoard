<html>
  <body>
    <main>
      <div id="index-searchbar">
        <form
          id="index-search-text"
          method="GET"
          action="/posts/search"
          enctype="application/x-www-form-urlencoded"
        >
          <input
            type="text"
            id="index-search-text"
            class="search-text"
            name="q"
            value="{{searchValue}}"
          />
          <br />
          <button class="submit-button center wide" type="submit">Search</button>
        </form>
      </div>
      <div id="img-list">
        {{#each results}}
          {{> card this}}
        {{/each}}
      </div>
    </main>
  </body>
</html>